<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Availability</th>
      <th>Location</th>
      <th>Reading List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.availability %></td>
        <td><%= book.location %></td>
        <td><%= book.reading_list_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-striped table-hover">
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reading_lists.each do |reading_list| %>
      <tr>
        <td><%= reading_list.name %></td>
        <td><%= reading_list.user_id %></td>
        <td><%= reading_list.id %></td>
        <td><%= link_to 'Show', reading_list %></td>
        <td><%= link_to 'Edit', edit_reading_list_path(reading_list) %></td>
        <td><%= link_to 'Destroy', reading_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>